FROM adoptopenjdk:11-jdk-hotspot

LABEL "org.opencontainers.image.title"="jbang"
LABEL "org.opencontainers.image.description"="Unleash the power of Java"
LABEL "org.opencontainers.image.url"="https://jbang.dev"
LABEL "org.opencontainers.image.licenses"="MIT"
LABEL "org.opencontainers.image.version"="0.96.4"
LABEL "org.opencontainers.image.revision"="7fb1f78cc96125872b30f914e10c096bf63dd20c"


RUN curl -Ls "https://github.com/jbangdev/jbang/releases/download/v0.96.4/jbang-0.96.4.zip" --output jbang-0.96.4.zip && \
    unzip jbang-0.96.4.zip && \
    rm jbang-0.96.4.zip && \
    chmod +x jbang-0.96.4/bin/jbang

VOLUME /scripts

ENV PATH="${PATH}:/jbang-0.96.4/bin"

ENTRYPOINT ["/jbang-0.96.4/bin/jbang"]
