FROM adoptopenjdk:11-jdk-hotspot

LABEL "org.opencontainers.image.title"="jbang"
LABEL "org.opencontainers.image.description"="Unleash the power of Java"
LABEL "org.opencontainers.image.url"="https://jbang.dev"
LABEL "org.opencontainers.image.licenses"="MIT"
LABEL "org.opencontainers.image.version"="0.100.1"
LABEL "org.opencontainers.image.revision"="7345c4e7bec9ca0e45aa37d1682f42dc7670befc"


RUN curl -Ls "https://github.com/jbangdev/jbang/releases/download/v0.100.1/jbang-0.100.1.zip" --output jbang-0.100.1.zip && \
    unzip jbang-0.100.1.zip && \
    rm jbang-0.100.1.zip && \
    chmod +x jbang-0.100.1/bin/jbang

VOLUME /scripts

ENV PATH="${PATH}:/jbang-0.100.1/bin"

ENTRYPOINT ["/jbang-0.100.1/bin/jbang"]
