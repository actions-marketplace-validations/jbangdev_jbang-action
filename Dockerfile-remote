FROM adoptopenjdk:11-jdk-hotspot

LABEL "org.opencontainers.image.title"="jbang"
LABEL "org.opencontainers.image.description"="Unleash the power of Java"
LABEL "org.opencontainers.image.url"="https://jbang.dev"
LABEL "org.opencontainers.image.licenses"="MIT"
LABEL "org.opencontainers.image.version"="0.90.2"
LABEL "org.opencontainers.image.revision"="b87d38657d3c97811bd726eefa06cb8520d7c9eb"


RUN curl -Ls "https://github.com/jbangdev/jbang/releases/download/v0.90.2/jbang-0.90.2.zip" --output jbang-0.90.2.zip && \
    unzip jbang-0.90.2.zip && \
    rm jbang-0.90.2.zip && \
    chmod +x jbang-0.90.2/bin/jbang

VOLUME /scripts

ENV PATH="${PATH}:/jbang-0.90.2/bin"

ENTRYPOINT ["/jbang-0.90.2/bin/jbang"]
