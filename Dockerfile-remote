FROM adoptopenjdk:11-jdk-hotspot

LABEL "org.opencontainers.image.title"="jbang"
LABEL "org.opencontainers.image.description"="Unleash the power of Java"
LABEL "org.opencontainers.image.url"="https://jbang.dev"
LABEL "org.opencontainers.image.licenses"="MIT"
LABEL "org.opencontainers.image.version"="0.84.2"
LABEL "org.opencontainers.image.revision"="7062a1adc3888c8b1675466aeafe6a6b57b34e71"


RUN curl -Ls "https://github.com/jbangdev/jbang/releases/download/v0.84.2/jbang-0.84.2.zip" --output jbang-0.84.2.zip && \
    unzip jbang-0.84.2.zip && \
    rm jbang-0.84.2.zip && \
    chmod +x jbang-0.84.2/bin/jbang

VOLUME /scripts

ENV PATH="${PATH}:/jbang-0.84.2/bin"

ENTRYPOINT ["/jbang-0.84.2/bin/jbang"]
